<scene
	background-col="0.05 0.05 0.2" 
	ambient-light="1 1 1"
	super-samp-width="5"
	max-recursion-level="5"
	use-acceleration="1">

	<omni-light pos="-4 1 0" color="1 1 1"/>
	<omni-light pos="0 0 0" color="0.3 0.3 0.3"/>
	<spot-light pos="0 7 -3" dir="0 -1 0" color="0.1 0.1 0.5" kc="0.001" kl="0.001" kq="0.01"/>
	

	<camera
		eye="0 0 0"
		direction="0 0 -1"
		screen-width="4"
		screen-dist="1"
		up-direction="0 1 0"
	/>

	<!-- Floor -->
	<trimesh
		tri1 = "-1000 -1  1000   1000 -1 1000   -1000 -1 -1000"
		tri2 = "-1000 -1 -1000   1000 -1 1000    1000 -1 -1000"
		mtl-ambient="0.1 0.1 0.1"
		mtl-diffuse="0.8 0.4 0.1"
		mtl-emission="0 0 0"
		mtl-specular="0 0 0"
		reflectance="0"
	/>

	<!-- Triangular pyramid -->
	<pyramid
		apex="3.2 0.2 -3"
		base="1.3 -1 -2   2.9 -1 -2   5.5 -1 -4"
		mtl-ambient="0.1 0.1 0.1"
		mtl-diffuse="0.65 0.55 0.1"
		mtl-emission="0.1 0.1 0"
		mtl-specular="1 1 1"
		mtl-shininess="3"
		reflectance="0"
	/>

	<!-- A lying reflective rectangular pyramid (to see its base) -->
	<pyramid
		apex="-1.5 -1 -6"
		base="-2 1 -2   -2 -1 -2   -4 -1 -3   -4 1 -3"
		mtl-ambient="0.1 0.1 0.1"
		mtl-diffuse="0 0.1 0"
		mtl-emission="0 0.1 0"
		mtl-specular="0.5 0.5 0.5"
		reflectance="0.8"
	/>
	
	<!-- 2 vertical pentagon pyramid (tips on camera's axis) -->
	<pyramid
		apex="0 0 -2.5"
		base="0.57735 -1 -3.5   1.12946 0.24007 -3.5   0 1.1547 -3.5   -1.12946 0.24007 -3.5   -0.57735 -1 -3.5"
		mtl-ambient="0.1 0.1 0.1"
		mtl-diffuse="0.3 0.4 0.5"
		mtl-emission="0 0 0"
		mtl-specular="0.8 0.8 0.8"
		mtl-shininess="2"
		reflectance="0"
	/>
	<pyramid
		apex="0 0 -4.5"
		base="0.57735 -1 -3.5   -0.57735 -1 -3.5   -1.12946 0.24007 -3.5   1.12946 0.24007 -3.5   0 1.1547 -3.5"
		mtl-ambient="0.1 0.1 0.1"
		mtl-diffuse="0.3 0.4 0.5"
		mtl-emission="0 0 0"
		mtl-specular="0.8 0.8 0.8"
		mtl-shininess="2"
		reflectance="0"
	/>

	<!-- A pyramid with a base in the shape of the Star of David (polygon base) -->
	<pyramid
		apex="0 -0.65 -1.5"
		base="0 -1 -0.75   0.25 -1 -1   0.75 -1 -1   0.5 -1 -1.5   0.75 -1 -2   0.25 -1 -2 0 -1 -2.5   -0.25 -1 -2   -0.75 -1 -2   -0.5 -1 -1.5   -0.75 -1 -1   -0.25 -1 -1"
		mtl-ambient="0.1 0.1 0.1"
		mtl-diffuse="0.6 0.1 0"
		mtl-emission="0 0 0"
		mtl-specular="0.6 0 0"
		mtl-shininess="2"
		reflectance="0.05"
	/>
	

</scene>
